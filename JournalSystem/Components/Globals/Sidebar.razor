@inject IPreferenceService PreferenceService

<aside class="w-64 flex flex-col justify-between border-r border-slate-200 bg-white p-4">
    <div class="flex flex-col gap-8">
        <div class="flex items-center gap-3 px-2">
            <div
                class="aspect-square rounded-full size-10 border-2 border-primary grid place-items-center bg-primary text-primary-foreground font-bold text-lg">
                @PreferenceService.GetPreference(UserPreferences.Username)[0]
            </div>
            <div class="flex flex-col">
                <h1 class="text-sm font-bold leading-none text-slate-900">
                    @PreferenceService.GetPreference(UserPreferences.Username)
                </h1>
            </div>
        </div>
        <nav class="flex flex-col gap-2">
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg bg-primary/10 text-primary"
                href="@SiteRoutes.Journal">
                <i class="fi fi-rr-book-bookmark"></i>
                <p class="text-sm font-bold">Journal</p>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 hover:bg-slate-100 transition-all"
                href="@SiteRoutes.Calendar">
                <i class="fi fi-rr-calendar-day"></i>
                <p class="text-sm font-medium">Calendar</p>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 hover:bg-slate-100 transition-all"
                href="@SiteRoutes.Analytics">
                <i class="fi fi-rr-chart-histogram"></i>
                <p class="text-sm font-medium">Analytics</p>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 hover:bg-slate-100 transition-all"
                href="@SiteRoutes.Settings">
                <i class="fi fi-rr-settings-sliders"></i>
                <p class="text-sm font-medium">Settings</p>
            </a>
        </nav>
    </div>

    <AppButton>
        <i class="fi fi-rr-add-document"></i> <span>New Entry</span>
    </AppButton>
</aside>