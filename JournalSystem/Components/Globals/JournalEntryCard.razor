@using JournalSystem.Models

<article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
    <header class="flex flex-wrap items-start justify-between gap-3">
        <div>
            <h3 class="text-lg font-semibold text-slate-900">@Entry.Title</h3>
            <div class="text-sm text-slate-500">@Entry.EntryDate.ToString("yyyy/MM/dd")</div>
        </div>
        <div class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
            @Entry.PrimaryMood
        </div>
    </header>

    @if (!string.IsNullOrWhiteSpace(Entry.Content))
    {
        <div class="mt-3 line-clamp-3 text-sm text-slate-700">
            @((MarkupString)Entry.Content)
        </div>
    }

    @if (Entry.Tags.Any())
    {
        <div class="mt-4 flex flex-wrap gap-2">
            @foreach (var tag in Entry.Tags)
            {
                <span class="rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary">
                    @tag
                </span>
            }
        </div>
    }
</article>

@code {
    [Parameter] public JournalEntry Entry { get; set; } = default!;
}
