<button type="@Type" class="@($"{BaseClass} ${ClassName} {VariantClass}")">
    @ChildContent
</button>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Variant { get; set; } = "primary";
    [Parameter] public string Type { get; set; } = "button";
    [Parameter] public string ClassName { get; set; } = "";

    private const string BaseClass = "inline-flex items-center justify-center rounded-md px-4 py-2 text-sm font-semibold";

    private string VariantClass => Variant.ToLowerInvariant() switch
    {
        "secondary" => "bg-slate-100 text-slate-900 hover:bg-slate-200",
        "outline" => "border border-slate-300 text-slate-900 hover:bg-slate-50",
        "destructive" => "bg-red-600 text-white hover:bg-red-700",
        _ => "bg-primary text-white hover:brightness-105"
    };
}